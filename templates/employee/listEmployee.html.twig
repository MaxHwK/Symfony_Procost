{% extends 'layout.html.twig' %}

{% block title %}Employees List{% endblock %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i> All Employees</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Employees</li>
            </ul>
        </div>

        {% include 'messages/flash_message.html.twig' %}

        <div class="tile pb-5">
            <a href="{{ asset('/employee/edit/') }}" class="btn btn-primary float-right mb-4"><i
                class="fa fa-plus-circle mr-2"></i>Add an employee</a>
           
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Job</th>
                        <th>Daily cost</th>
                        <th>Hiring date</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for employee in employees %}
                        <tr>
                            <td>{{ employee.firstName }} {{ employee.lastName }}</td>
                            <td>{{ employee.email }}</td>
                            <td>{{ employee.job.name }}</td>
                            <td>{{ employee.dailyCost|format_currency('EUR') }}</td>
                            <td>{{ employee.hiringDate|date("d/m/Y") }}</td>

                            <td>   
                                <a href="{{ asset('/employee/show/'~employee.id) }}" class="btn btn-primary btn-sm">
                                        <i class="fa fa-eye mr-0"></i>
                                </a>

                                <a href="{{ asset('/employee/edit/'~employee.id) }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-pencil mr-0"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr/>

            {% include 'navigation/navigation.html.twig' %}

        </div>
    </main>
{% endblock %}
