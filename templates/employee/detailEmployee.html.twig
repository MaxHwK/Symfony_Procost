{% extends 'layout.html.twig' %}

{% block title %}Detail Employee{% endblock %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp; Follow-up to 
                    {{ employee.firstname }} {{ employee.lastName }}</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('list_employee') }}">Employees</a>
                </li>
                <li class="breadcrumb-item">Follow-up to 
                    {{ employee.firstname }} {{ employee.lastName }}</li>
            </ul>
        </div>

        {% include 'messages/flash_message.html.twig' %}

        <div class="row">
            <div class="col-md-4">
                <div class="tile">
                    <table class="table table-striped table-bordered table-sm">
                        <tbody>
                        <tr>
                            <th>FirstName</th>
                            <td>{{ employee.firstName }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ employee.lastName }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ employee.email }}</td>
                        </tr>
                        <tr>
                            <th>Job</th>
                            <td>{{ employee.job.name }}</td>
                        </tr>
                        <tr>
                            <th>Daily cost</th>
                            <td>{{ employee.dailyCost|format_currency('EUR') }}</td>
                        </tr>
                        <tr>
                            <th>Hiring date</th>
                            <td>{{ employee.hiringDate|date("d/m/Y") }}</td>
                        </tr>
                        </tbody>
                    </table>

                    {% if app.user.employee.id == employ.id %}
                        <a href="{{ asset('/employee/edit/'~employee.id) }}" class="btn btn-info">
                            <i class="fa fa-pencil"></i>Edit</a>
                    {% endif %}
                </div>

                <div class="tile">
                    <h3 class="title-title mb-4">Add time</h3>
                    {{ form_start(form) }}
                    <div class="form-group row">
                        <label for="select-projects" class="control-label col-md-6">Project concerned</label>
                        <div class="col-md-6">
                            {{ form_errors(form.project) }}
                            {{ form_label(form.project) }}
                            {{ form_widget(form.project,{'attr':{'class':'form-control','placeholder':form.project.vars.label}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="days-count" class="control-label col-md-6">Number of days</label>
                        <div class="col-md-6">
                            {{ form_errors(form.days) }}
                            {{ form_label(form.days) }}
                            {{ form_widget(form.days,{'type':'number','attr':{'class':'form-control','placeholder':form.days.vars.label}}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="offset-md-6 col-md-8">
                            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Save</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col-md-8">
                <div class="tile pb-5">
                    <h3 class="tile-title">History of production times</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm">
                            <thead>
                            <tr>
                                <th>Project</th>
                                <th>Time</th>
                                <th>Entry date</th>
                                <th>Total cost</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for hourlist in hourlists %}
                                <tr>
                                    <td>{{ hourlist.project.name }}</td>
                                    <td>{{ hourlist.hours }}</td>
                                    <td>{{ hourlist.creationDate|date("d/m/Y") }}</td>
                                    <td>{{ (hourlist.hours*hourlist.employee.dailyCost)|format_currency('EUR') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <hr/>
                    {% include 'navigation/navigation.html.twig' %}

                </div>
            </div>
        </div>
    </main>
{% endblock %}
